<div class="container">
  <div class="row">
    <h2>Upload a new video</h2>
    <%= form_for @video do |f| %>
      <div class="form-group">
        <%= f.label :file %>
        <%= f.file_field :file, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "Upload", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div> <!-- /container -->